<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView103"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Datos Mascota\nCaracterísticas"
            android:textSize="8pt" />
        <TextView
            android:id="@+id/textView104"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:text="Elige por menos una"
            android:textSize="6pt" />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:theme="@style/AppLightTheme"
            android:rowCount="5">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="Amigable"
                android:theme="@style/LightButton"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textSize="8dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Agresivo"
                android:theme="@style/LightButton"
                android:textColor="@color/colorPrimary"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="8dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:text="Dócil"
                android:textSize="8dp"
                android:theme="@style/LightButton"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal|center_vertical"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:text="Extrovertido"
                android:textSize="8dp"
                android:theme="@style/LightButton"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal|center_vertical"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:text="Callado"
                android:textSize="8dp"
                android:theme="@style/LightButton"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal|center_vertical"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:text="Ágil"
                android:textSize="8dp"
                android:theme="@style/LightButton"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal|center_vertical"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:text="Obstinado"
                android:textSize="8dp"
                android:theme="@style/LightButton"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal|center_vertical"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:text="Juguetón"
                android:textSize="8dp"
                android:theme="@style/LightButton"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal|center_vertical"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:text="Entrenable"
                android:textSize="8dp"
                android:theme="@style/LightButton"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal|center_vertical"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="4"
                android:text="Obediente"
                android:textSize="8dp"
                android:theme="@style/LightButton"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal|center_vertical"/>

        </GridLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTINUAR"
            android:theme="@style/DarkButton"/>

    </LinearLayout>

</LinearLayout>